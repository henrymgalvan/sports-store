<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta content="width=device-width" name="viewport" />
    <title>@ViewBag.Title</title>
    <link asp-href-include="/lib/bootstrap/dist/css/*.min.css" rel="stylesheet" />
    <script asp-src-include="/lib/jquery/**/jquery.min.js"></script>
    <script asp-src-include="/lib/jquery-validation/**/jquery.validate.min.js"></script>
    <script asp-src-include="/lib/jquery-validation.unobtrusive/**/*.min.js"></script>

    <style>
        .table {
            /*width: auto;*/
            margin: auto
        }

        .input-validation-error {
            border-color: red;
            background-color: #fee;
        }
    </style>
</head>
<body class="panel panel-default">
    <div class="panel-heading">
        <h4>
            @ViewBag.Title
            <a title="Log Out" data-toggle="tooltip" asp-controller="Account" asp-action="Logout" class="btn btn-sm btn-primary pull-right"><span class="glyphicon glyphicon-log-out" aria-hidden="true"></span></a>
        </h4>
    </div>
    <div class="panel-body">
        @if (TempData["message_green"] != null)
        {
            <div class="alert alert-success">@TempData["message_green"]</div>
        }
        @if (TempData["message_red"] != null)
        {
            <div class="alert alert-danger">@TempData["message_red"]</div>
        }
        @RenderBody()
    </div>
</body>
</html>